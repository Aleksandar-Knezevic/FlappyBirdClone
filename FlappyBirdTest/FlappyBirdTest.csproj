<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="backgroundMusic.wav" />
    <None Remove="chirp.wav" />
    <None Remove="images\clouds.png" />
    <None Remove="images\clouds2.png" />
    <None Remove="images\flappyBird.png" />
    <None Remove="images\pipeBottom.png" />
    <None Remove="images\pipeTop.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="sounds\backgroundMusic.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="sounds\chirp.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="images\clouds.png" />
    <Resource Include="images\clouds2.png" />
    <Resource Include="images\flappyBird.png" />
    <Resource Include="images\pipeBottom.png" />
    <Resource Include="images\pipeTop.png" />
  </ItemGroup>

</Project>
